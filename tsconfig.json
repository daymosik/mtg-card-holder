{
  "compilerOptions": {
    "lib": [
      "dom",
      "es2017"
    ],
    "target": "es5",
    "module": "commonjs",
    "sourceMap": true,
    "strictNullChecks": true,
    "jsx": "react",
    "jsxFactory": "h",
    "baseUrl": ".",
    "paths": {
      "@app": [ "src/ts/app.tsx" ],
      "@auth": [ "src/ts/auth.ts" ],
      "@firebase-config": [ "src/ts/firebase.ts" ],
      "@components/*": [ "src/ts/components/*" ],
      "@models/*": [ "src/ts/models/*" ],
      "@modules/*": [ "src/ts/modules/*" ],
      "@services/*": [ "src/ts/services/*" ],
      "@slices/*": [ "src/ts/slices/*" ],
      "@utils/*": [ "src/ts/utils/*" ]
    }
  }
}
