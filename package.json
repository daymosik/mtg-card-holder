{
  "name": "mtg-card-holder",
  "version": "2.0.0",
  "main": "build/app.js",
  "license": "MIT",
  "author": "Damian Majsner <d.majsner@gmail.com>",
  "scripts": {
    "build-with-tests": "npm run lint && npm run test && npm run build",
    "build": "preact build --no-sw --no-prerender --template ./src/index.html",
    "dev": "preact watch --no-sw --template ./src/index.html",
    "serve": "sirv build --port 8080 --cors --single",
    "test": "jest ./test",
    "lint": "eslint 'src/**/*.{js,jsx,ts,tsx}'",
    "fix": "yarn lint --fix"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{css,md,scss}": "prettier --write",
    "*.{js,jsx,ts,tsx}": "eslint --fix"
  },
  "eslintIgnore": [
    "build/*"
  ],
  "dependencies": {
    "axios": "^0.21.1",
    "bootstrap": "^4.6.0",
    "firebase": "^8.2.7",
    "firebase-tools": "^9.3.0",
    "keyrune": "^3.7.1",
    "mtgsdk-ts": "^1.1.2",
    "preact": "^10.5.12",
    "preact-jsx-chai": "^3.0.0",
    "preact-markup": "^2.1.1",
    "preact-render-to-string": "^5.1.12",
    "preact-router": "^3.2.1",
    "react-redux": "^7.2.2",
    "redux": "^4.0.5",
    "redux-thunk": "^2.3.0",
    "rxjs": "^6.6.3",
    "tesseract.js": "^2.1.4",
    "tippy.js": "^6.2.7"
  },
  "devDependencies": {
    "@teamsupercell/typings-for-css-modules-loader": "^2.4.0",
    "@types/enzyme": "^3.10.8",
    "@types/jest": "^26.0.20",
    "@types/node": "^14.14.28",
    "@types/react-redux": "^7.1.16",
    "@types/webpack-env": "^1.16.0",
    "@typescript-eslint/eslint-plugin": "^4.15.1",
    "@typescript-eslint/parser": "^4.15.1",
    "css-loader": "^5.0.2",
    "dotenv": "^8.2.0",
    "enzyme": "^3.11.0",
    "enzyme-adapter-preact-pure": "^3.0.0",
    "eslint": "^7.20.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-react": "^7.22.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "husky": "^4.3.6",
    "jest": "^26.6.3",
    "jest-preset-preact": "^4.0.2",
    "lint-staged": "^10.5.4",
    "node-sass": "^5.0.0",
    "preact-cli": "^3.0.5",
    "prettier": "^2.2.1",
    "sass-loader": "^10.1.0",
    "sirv-cli": "^1.0.11",
    "typescript": "^4.1.5"
  }
}
